{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "none",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outFile": "hello-world.js",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}